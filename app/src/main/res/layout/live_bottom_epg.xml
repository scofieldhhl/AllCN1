<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/live_epg_bg">

    <FrameLayout
        android:id="@+id/live_id_root_v"
        android:layout_width="260pt"
        android:layout_height="135pt"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="57pt"
        android:layout_marginBottom="32pt">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/live_id1"
                style="@style/LIVE_IMG_ID_STYLE"
                android:background="@drawable/live9" />

            <ImageView
                android:id="@+id/live_id2"
                style="@style/LIVE_IMG_ID_STYLE"
                android:background="@drawable/live9" />

            <ImageView
                android:id="@+id/live_id3"
                style="@style/LIVE_IMG_ID_STYLE"
                android:background="@drawable/live9" />

            <ImageView
                android:id="@+id/live_id4"
                style="@style/LIVE_IMG_ID_STYLE"
                android:background="@drawable/live9" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/live_epg_chal_name"
        android:layout_width="867pt"
        android:layout_height="67pt"
        android:layout_marginLeft="30pt"
        android:layout_toRightOf="@+id/live_id_root_v"
        android:gravity="left"
        android:paddingRight="30pt"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="40pt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65pt"/>

    <TextView
        android:id="@+id/live_epg_cur_head"
        android:layout_width="wrap_content"
        android:layout_height="30pt"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/live_epg_chal_name"
        android:layout_marginBottom="35pt"
        android:layout_toRightOf="@+id/live_id_root_v"
        android:singleLine="true"
        android:text="@string/live_epg_now"
        android:textColor="@android:color/white"
        android:textSize="23pt" />

    <TextView
        android:id="@+id/live_epg_cur_epg"
        android:layout_width="300pt"
        android:layout_height="30pt"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10pt"
        android:layout_marginBottom="35pt"
        android:layout_toRightOf="@+id/live_epg_cur_head"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="23pt" />

    <TextView
        android:id="@+id/live_epg_next_head"
        android:layout_width="wrap_content"
        android:layout_height="30pt"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30pt"
        android:layout_marginBottom="35pt"
        android:layout_toRightOf="@+id/live_epg_cur_epg"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/live_epg_next"
        android:textColor="@android:color/white"
        android:textSize="23pt" />

    <TextView
        android:id="@+id/live_epg_next_epg"
        android:layout_width="300pt"
        android:layout_height="30pt"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10pt"
        android:layout_marginBottom="35pt"
        android:layout_toRightOf="@+id/live_epg_next_head"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="23pt" />
</RelativeLayout>