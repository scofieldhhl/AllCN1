<?xml version="1.0" encoding="utf-8"?><!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--android:layout_width="175pt"--><!--android:layout_height="250pt"--><!--android:elevation="10pt">-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="213pt"
    android:layout_height="match_parent"
    android:elevation="10pt"
    android:focusable="true">

    <ImageView
        android:id="@+id/hot_re_details_item_img_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/hot_re_details_item_text_v"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:background="@drawable/update_to_bg"
        android:gravity="center_horizontal"
        android:paddingTop="5pt"
        android:textColor="@android:color/white"
        android:textSize="16pt"
        android:visibility="gone" />

    <!-- android:layout_height="39pt" -->

    <TextView
        android:id="@+id/hot_re_details_item_name_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/text_bg"
        android:ellipsize="marquee"
        android:gravity="bottom|center_horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="24pt"
        android:paddingBottom="10pt"/>
</FrameLayout>