<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60pt"
    android:layout_marginTop="5pt"
    android:layout_marginBottom="10pt"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/list1_id"
        android:layout_width="55pt"
        android:layout_height="32pt"
        android:textColor="@android:color/black"
        android:textSize="20pt"
        android:gravity="center"
        android:layout_marginLeft="28pt"
        android:layout_gravity="center_vertical"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/list1_name"
        android:layout_width="200pt"
        android:layout_height="35pt"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20pt"
        android:textColor="@android:color/white"
        android:textSize="28pt"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever" />

    <ImageView
        android:id="@+id/list1_fav"
        android:layout_width="32pt"
        android:layout_height="32pt"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30pt"
        android:background="@drawable/chal_fav"
        android:visibility="gone"/>
</LinearLayout>